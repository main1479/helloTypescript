{
	"compilerOptions": {
		"target": "es5",
		"useDefineForClassFields": true,
		"module": "es5",
		// "lib": ["ESNext", "DOM", "dom.iterable"],
		"moduleResolution": "Node",
		"strict": true,
		"sourceMap": true,
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"noEmit": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"downlevelIteration": true
	},
	"include": ["./src"]
}
